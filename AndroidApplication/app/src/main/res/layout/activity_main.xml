<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <com.example.itogoviyproject.PaintView
        android:id="@+id/paint_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_tools"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_paint_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#138372"
                android:contentDescription="@string/content_description_brush"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#138372"
                tools:ignore="ImageContrastCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#FFFFCC00"
                android:contentDescription="@string/content_description_erase"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#FFFFCC00"
                tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#13E86B"
                android:contentDescription="@string/content_description_color"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#13E86B"
                tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#FF0000FF"
                android:contentDescription="@string/content_description_color"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#FF0000FF" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#FFFF6600"
                android:contentDescription="@string/content_description_color"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#FFFF6600"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#E80913"
                android:contentDescription="@string/content_description_color"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#E80913"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#791AE8"
                android:contentDescription="@string/content_description_color"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#791AE8"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#1EA9E8"
                android:contentDescription="@string/content_description_color"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#1EA9E8"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#FF51BD"
                android:contentDescription="@string/content_description_color"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#FF51BD" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#FF000000"
                android:contentDescription="@string/content_description_color"
                android:onClick="paintClicked"
                android:src="@drawable/paint"
                android:tag="#FF000000" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_draw"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/content_description_brush"
            android:src="@drawable/brush" />

        <ImageButton
            android:id="@+id/button_erase"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/content_description_erase"
            android:onClick="paintClicked"
            android:src="@drawable/eraser"
            android:tag="#FFFFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>